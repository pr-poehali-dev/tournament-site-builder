{
  "tests": [
    {
      "name": "Get all users",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": {
        "users": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Batch update user ratings",
      "method": "PUT",
      "path": "/?batch=true",
      "body": {
        "updates": [
          {
            "user_id": 1,
            "rating": 1250,
            "tournaments": 1,
            "wins": 3,
            "losses": 2,
            "draws": 0
          }
        ]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Delete non-existent user returns 404",
      "method": "DELETE",
      "path": "/?id=99999",
      "expectedStatus": 404,
      "expectedBody": {
        "error": "User not found"
      },
      "bodyMatcher": "partial"
    }
  ]
}